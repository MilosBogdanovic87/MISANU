package milosbogdanovic;

import java.io.*;

public class IF2 {

    public static void main(String[] args) throws Exception {
    /* Za uneti broj ispitati da li je deljiv brojem 2 i brojem 3. */

    int broj;

    BufferedReader ulaz = new BufferedReader(new InputStreamReader(System.in));

    System.out.println("Unesite broj: ");

    broj = Integer.parseInt(ulaz.readLine());

    if ((broj % 2 == 0) && (broj % 3 == 0)) {
        System.out.println("Uneti broj " + broj + " je deljiv i brojem 2 i brojem 3.");
    } else
        System.out.println("Uneti broj " + broj + " nije deljiv sa 2 i 3.");
    }

}